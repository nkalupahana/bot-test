{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "exec": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-console": 0,
        "no-control-regex": 0,
        "no-unused-vars": [
            "error",
            { "args": "none" }
        ],
        "prettier/prettier": ["error", {"tabWidth": 4}],
        "strict": ["error", "global"],
        "yoda": "error"
    }
}
